@using Microsoft.AspNetCore.Mvc.Rendering
@model Dotnet_MVC_Vidly.ViewModels.NewCustomerViewModel
@{
    ViewBag.Title = "New";
    Layout = "_Layout";
}
<style type="text/css">.form-check { }</style>

<h2>New Curstomer</h2>

@using (Html.BeginForm("Create", "Customers")){
    <div class="form-group">
        @Html.LabelFor(m => m.Customer.Name)
        @Html.TextBoxFor(m => m.Customer.Name, new { @class = "form-control"})
    </div>
    
    <div class="form-group">
        @Html.LabelFor(m => m.Customer.Birthday)
        @Html.TextBoxFor(m => m.Customer.Birthday, new { @class = "form-control"})
    </div>
    
    <div class="form-check">
        <label>
            @Html.CheckBoxFor(m => m.Customer.IsSubscribedToNewsletter) Subscribed to Newsletter?
        </label>
    </div>
    
    <div class="form-group">
        @Html.LabelFor(m => m.Customer.MemberShipTypeId)
        @Html.DropDownListFor(m => m.Customer.MemberShipTypeId, new SelectList(Model.MembershipTypes, "Id", "Name"), "Select MembershipType", new { @class = "form-control"})
    </div>
    
    <button type="submit" class="btn btn-primary">Save</button>
               
    }
