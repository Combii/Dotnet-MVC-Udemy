@model Movie

@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
        <li><b>Genre: </b> @Model.Genre.GenreName</li>
        <li><b>Release Date: </b>@(Model.ReleaseDate != null ? Model.ReleaseDate.Value.ToString("dddd, MMMM, yyyy") : "n/a")</li>
        <li><b>Date Added: </b>@Model.DateAdded.ToString("dddd, MMMM, yyyy")</li>
        <li><b>Number in Stock: </b>@Model.NumberOfStock</li>
</ul>